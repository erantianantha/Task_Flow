{
  "name": "taskflow",
  "version": "1.0.0",
  "description": "TaskFlow - Premium Project Management Platform",
  "main": "server/server.js",
  "scripts": {
    "install-all": "npm install --prefix server && npm install --prefix client",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm install && NODE_OPTIONS=\"--openssl-legacy-provider\" npm run build",
    "setup": "./setup.sh",
    "dev": "npm run start",
    "vercel-build": "cd client && npm install && NODE_OPTIONS=\"--openssl-legacy-provider\" npm run build"
  },
  "keywords": [
    "project-management",
    "taskflow",
    "mern",
    "react",
    "nodejs",
    "mongodb",
    "premium-ui",
    "glassmorphism"
  ],
  "author": "TaskFlow Team",
  "license": "MIT",
  "engines": {
    "node": "22.x",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/taskflow.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/taskflow/issues"
  },
  "homepage": "https://github.com/your-username/taskflow#readme"
}
